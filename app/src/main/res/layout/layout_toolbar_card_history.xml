<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:gravity="left">


    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/llTool3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toolArrowLeft"
            android:layout_width="@dimen/iconlike_size"
            android:layout_height="@dimen/iconlike_size"
            android:layout_gravity="top"
            android:layout_marginTop="36dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/selector_arrow_left"
            />

        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/llTool4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvToolbarTitle"
                android:textSize="36sp"
                android:textColor="@color/colorTextWhite"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IPC752"/>

            <LinearLayout
                android:layout_centerVertical="true"
                android:id="@+id/llTool5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvToolbarDesc"
                    android:layout_marginBottom="16dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test en cours"/>

                <ProgressBar
                    android:id="@+id/toolProgressRefresh"
                    android:layout_width="@dimen/iconlike_size"
                    android:layout_height="@dimen/iconlike_size" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>